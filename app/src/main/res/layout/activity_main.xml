<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/phoneinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="测试中常用信息及操作"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机品牌" />

        <TextView
            android:id="@+id/systemversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机系统" />

    </LinearLayout>

    <TextView
        android:id="@+id/resolution"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="手机分辨率" />

    <TextView
        android:id="@+id/phoneip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="手机ip" />

    <TextView
        android:id="@+id/phoneconnectwifi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="手机当前所连wifi" />

    <TextView
        android:id="@+id/phoneconnectproxy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="手机当前所连代理" />

    <Button
        android:id="@+id/refreshBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="7dp"
        android:text="刷新" />


    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent"
                android:layout_weight="1">
                <!--<include layout="@layout/activity_youshixiu"/>-->
                <!--<include layout="@layout/activity_dami"/>-->

            </FrameLayout>
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </TabWidget>

        </LinearLayout>



</TabHost>

</LinearLayout>
